<MyLayout>
    BoxLayout:
        orientation: 'vertical' 
        size: root.width, root.height
        background_color: (.95,.95,.95,1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        Screen:
            MDCard:
                orientation: "vertical"
                padding: "8dp"
				size_hint: None, None
				size: "280dp", "180dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5} 
                
                #MDLabel:
                #    id: label
                #    text: "test"
                #    text_size: self.size
                #     color: "grey"
                #    bold: True
                MDLabel:
					text: "Title"
					theme_text_color: "Secondary"
					size_hint_y: None
					height: self.texture_size[1]

                MDTextField:
                    hint_text: "Email"
                    helper_text: "user@gmail.com"
                    validator: "email"
				MDSeparator:
					height: "1dp"

				MDLabel:
					text: "Body"