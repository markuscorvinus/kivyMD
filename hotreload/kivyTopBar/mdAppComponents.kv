
<MDTextField>
    font_size: '18sp'
    #hint_font_size: '100sp'
    #helper_font_size: '100sp'
    mode: 'line'
    line_color_normal: app.theme_cls.primary_color
    text_color_normal: app.theme_cls.primary_color
    hint_text_color_normal: app.theme_cls.primary_color
    hint_text_color_focus: "white" if app.theme_cls.theme_style == "Dark" else "black"
    text_color_focus: "white" if app.theme_cls.theme_style == "Dark" else "black"


<CustomPasswordField>
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter a password"    

    MDIconButton:
        id: password_open_icon
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True  


<CustomSnackbar>
    MDIconButton:
        id: snackbar_icon
        pos_hint: {'center_y': .5}
        icon: root.icon
        theme_icon_color: "Custom"
        icon_color: "white"
        opposite_colors: True

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 'ffffff'
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

<MainLayout>:
    MDBoxLayout:
        orientation: "vertical"
        size: root.size

        MDTopAppBar:
            title: "Navigation Bar"
            left_action_items: [["menu"]]
            right_action_items: [["dots-vertical"],["theme-light-dark",lambda x: root.theme_change(app)]]
        


            
        MDBottomNavigation:
            panel_color: app.theme_cls.primary_color
            selected_color_background: None
            text_color_active: app.theme_cls.primary_dark
            text_color_normal: 1,1,1,1
            use_text: False
            #transition_duration: 0.9


            ########################        
            ###       LABEL      ###
            ########################
            MDBottomNavigationItem:
                name: 'screen 1'
                icon: 'home-outline'
                #badge_icon: "numeric-10"
                
                MDLabel:
                    text: 'Welcome to KivyMD'
                    halign: 'center'
                    font_size: '55sp'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color


